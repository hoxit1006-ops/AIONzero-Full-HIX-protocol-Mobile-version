{
  "expo": {
    "name": "HIX Protocol",
    "slug": "hix-protocol",
    "version": "1.1.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.hixprotocol.app"
    },
    "android": {
      "package": "com.hixprotocol.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "ACTIVITY_RECOGNITION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow HIX Protocol to track your movement for rewards."
        }
      ]
    ]
  }
}